<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll1"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_day_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/toolbarStyle"
        android:fitsSystemWindows="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_day_details"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_klassenarbeiten"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/classtests_"
                tools:ignore="NestedWeights" />

            <FrameLayout
                android:id="@+id/klassenarbeiten_day_details_container"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>

            <!--<fragment
                android:id="@+id/klassenarbeiten"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                class="bsbz_app.jimdo.mrgames13.com.App.MainActivity$KlassenArbeitenFragment" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.01"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#80828A">
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_hausaufgaben"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/homework_"
                tools:ignore="NestedWeights" />

            <FrameLayout
                android:id="@+id/hausaufgaben_day_details_container"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>

            <!--<fragment
                android:id="@+id/hausaufgaben"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                class="bsbz_app.jimdo.mrgames13.com.App.DayDetailsActivity$HausaufgabenFragment" />-->

        </LinearLayout>

        <LinearLayout
            android:layout_weight="0.01"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#80828A">
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_termine"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="0.1"
                android:gravity="center"
                android:text="@string/events_"
                tools:ignore="NestedWeights" />

            <FrameLayout
                android:id="@+id/termine_day_details_container"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"/>

            <!--<fragment
                android:id="@+id/termine"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                class="bsbz_app.jimdo.mrgames13.com.App.MainActivity$TermineFragment" />-->

        </LinearLayout>
    </LinearLayout>
</LinearLayout>