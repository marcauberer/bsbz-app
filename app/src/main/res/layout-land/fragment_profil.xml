<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/Name_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/name_"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/Profil_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Name_l"
        android:layout_alignBottom="@+id/Name_l"
        android:layout_alignLeft="@+id/Profil_Klasse"
        android:layout_alignParentRight="true"
        android:gravity="right|center_vertical"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="RtlHardcoded,HardcodedText" />

    <TextView
        android:id="@+id/Profil_Klasse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/Bewertung_l"
        android:layout_alignBottom="@+id/Bewertung_l"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/Bewertung_l"
        android:gravity="right|center_vertical"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/Bewertung_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Name_l"
        android:layout_marginTop="10dp"
        android:text="@string/class_"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/last_syncronisation_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/last_sync_loading"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:ignore="HardcodedText,RtlHardcoded" />

    <TextView
        android:id="@+id/l_Rechte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/Profil_Klasse"
        android:layout_marginTop="10dp"
        android:text="@string/rights_"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/Profil_Rechte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/l_Rechte"
        android:layout_alignBottom="@+id/l_Rechte"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_toRightOf="@id/l_Rechte"
        android:text="@string/loading"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/klasse_wahlen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/support_developers"
        android:text="@string/choose_class_actually" />

    <Button
        android:id="@+id/support_developers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll1"
        android:text="@string/support_developers"/>
    
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/last_syncronisation_time" >

        <Button
            android:id="@+id/ideen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ideas_for_development"
            android:layout_weight="0.5" />

        <Button
            android:id="@+id/feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/give_feedback"
            android:layout_weight="0.5" />
    </LinearLayout>
</RelativeLayout>
