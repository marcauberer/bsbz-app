<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".App.EditTimeTableActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_edit_timetable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/toolbarStyle"
        android:fitsSystemWindows="true" />

    <android.support.design.widget.TabLayout
        android:id="@+id/edit_timetable_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/toolbarStyle"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/toolbar_day_details" />

    <android.support.v4.view.ViewPager
        android:id="@+id/edit_timetable_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/day_details_tab_layout" />

</RelativeLayout>