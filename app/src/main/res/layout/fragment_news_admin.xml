<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="12dp">

    <FrameLayout
        android:id="@+id/fragment_news_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/no_active_news"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/keine_aktiven_news"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:visibility="gone"/>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|bottom">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/new_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_white_48pt"
            android:theme="@style/toolbarStyle"
            app:backgroundTint="@color/colorPrimary"
            android:layout_gravity="right|bottom"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <CheckBox
            android:id="@+id/showInvisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/new_new"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/show_invisible"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:gravity="center"
            android:text="@string/long_tap_on_new"
            android:id="@+id/tv_tong_tap_on_new"
            android:layout_above="@+id/showInvisible"
            android:layout_toLeftOf="@+id/new_new"
            android:layout_alignParentLeft="true"/>

    </RelativeLayout>

</RelativeLayout>